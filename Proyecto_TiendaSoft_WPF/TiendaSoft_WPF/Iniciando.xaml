<Window x:Class="Iniciando"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:TIENDASOFT"
        mc:Ignorable="d" Height="180" Width="400" WindowStartupLocation="CenterScreen" Topmost="True" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#ffffffff" Offset="0"/>
                <GradientStop Color="#d0d0d0" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="Imagenes/cash_register.png" Height="70"/>
            <TextBlock Text="TIENDA SOFT" FontWeight="Medium" FontSize="16" TextAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock x:Name="lblVersion" Text="1.1.1." FontWeight="Medium" FontSize="10" TextAlignment="Center" Margin="0,2,0,8"/>            
            <ProgressBar Height="10" Width="280" IsIndeterminate="True" />
        </StackPanel>
        
    </Grid>
</Window>
