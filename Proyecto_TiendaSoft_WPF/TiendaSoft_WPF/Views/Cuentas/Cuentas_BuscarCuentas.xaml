<Window xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"  x:Class="Cuentas_BuscarCuentas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Buscar Cuenta" Height="270" Width="450" WindowStartupLocation="CenterScreen" Icon="/Bloquera_TF;component/Imagenes/new.png" ResizeMode="NoResize">
    
    <Grid Background="#404040" Margin="0">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>            
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="6" Grid.ColumnSpan="4" Background="WhiteSmoke" Margin="1" Padding="10"/>
        
        <TextBox  Name="tb_Search" Grid.Column="0" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="5" VerticalContentAlignment="Center" />
        
        <DataGrid Name="dataGrid" Grid.Row="1" Margin="5,0,5,10" FontWeight="SemiBold"/>
        
    </Grid>
</Window>
