<Window x:Class="Inventarios_Bajos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Inventarios Bajos" Height="330" Width="500" WindowStartupLocation="CenterScreen" Icon="/TIENDASOFT;component/Imagenes/bill2.png" ResizeMode="NoResize">

    <Grid Background="#404040" Margin="0" >        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Border Background="WhiteSmoke" Margin="1" Grid.ColumnSpan="2" Grid.RowSpan="4"/>
        
        <Label Content="PRODUCTOS BAJOS EN INVENTARIO" Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Center" FontWeight="SemiBold"/>
        
        <DataGrid Name="datagrid"  Grid.Column="0" Grid.Row="1" Margin="5" FontWeight="SemiBold"/>
        
        <Button Name="btn_aceotar" Content="ACEPTAR"  Grid.Column="0" Grid.Row="2" Width="150" Margin="0,8" FontWeight="SemiBold"/>
    </Grid>
</Window>
